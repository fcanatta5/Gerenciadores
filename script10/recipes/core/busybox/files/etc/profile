# /etc/profile
export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
export HOME="/root"
export SHELL="/bin/sh"
umask 022

# musl: locale padrÃ£o (sem glibc locales)
export LANG="${LANG:-C.UTF-8}"
export LC_ALL="${LC_ALL:-}"

# Prompt
if [ "$(id -u 2>/dev/null)" = "0" ]; then
  export PS1='\u@\h:\w# '
else
  export PS1='\u@\h:\w$ '
fi
