#!/usr/bin/env bash
# core/gmp/build
# GMP - GNU Multiple Precision Arithmetic Library (dep essencial do GCC)

set -Eeuo pipefail

PKG_NAME="gmp"
PKG_CAT="core"
PKG_VER="6.3.0"
PKG_DESC="GNU Multiple Precision Arithmetic Library"
PKG_URL="https://gmplib.org/"
PKG_LICENSE="LGPL-3.0-or-later"

PKG_DEPS=( "core/musl" )
PKG_BDEPS=()

SOURCES=(
  "https://ftp.gnu.org/gnu/gmp/gmp-${PKG_VER}.tar.xz"
)

ALLOW_NO_CHECKSUM=1
SHA256SUMS=(
  # "<sha256-real-do-gmp-${PKG_VER}.tar.xz>"
)

do_configure(){
  if [[ -r "/var/lib/adm/lib/adm-build-helpers.sh" ]]; then
    # shellcheck disable=SC1091
    source "/var/lib/adm/lib/adm-build-helpers.sh"
    adm_src_enter
    adm_clean_builddir
  else
    mkdir -p "${WORKDIR}/build"
    export BUILD_DIR="${WORKDIR}/build"
  fi

  # Recomendações comuns: desabilitar nls, habilitar shared, e evitar builds “weird”
  # Para x86_64 isso é simples.
  ( cd "${BUILD_DIR}" && "${SRCTOP}/configure" \
      --prefix=/usr \
      --enable-shared \
      --disable-static \
      --disable-nls )
}

do_build(){
  make -C "${BUILD_DIR:-${WORKDIR}/build}" ${MAKEFLAGS}
}

do_install(){
  make -C "${BUILD_DIR:-${WORKDIR}/build}" DESTDIR="${DESTDIR}" install

  # Base minimalista: remover docs (opcional)
  rm -rf "${DESTDIR}/usr/share/info" 2>/dev/null || true
  rm -rf "${DESTDIR}/usr/share/man"  2>/dev/null || true
}
