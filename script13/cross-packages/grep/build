pkgname="grep"
pkgver="3.12"
pkgrel=1

INSTALL_ROOT="sysroot"

sources=(
  "https://ftp.gnu.org/gnu/grep/grep-${pkgver}.tar.xz::grep-${pkgver}.tar.xz"
)

sha256sums=(
  "2649b27c0e90e632eadcd757be06c6e9a4f48d941de51e7c0f83ff76408a07b9 grep-3.12.tar.xz"
)

pre_build() {
  : "${TARGET:=x86_64-linux-musl}"
  : "${TOOLS:=/mnt/adm/rootfs/tools}"
  : "${SYSROOT:=/mnt/adm/rootfs}"
  : "${JOBS:=4}"

  export PATH="$TOOLS/bin:$PATH"
  export CC="$TOOLS/bin/${TARGET}-gcc"
  export AR="$TOOLS/bin/${TARGET}-ar"
  export RANLIB="$TOOLS/bin/${TARGET}-ranlib"
  export STRIP="$TOOLS/bin/${TARGET}-strip"

  export CFLAGS="${CFLAGS:- -O2 -pipe}"
  export LDFLAGS="${LDFLAGS:-}"
}

build() {
  rm -rf _build
  mkdir -p _build
  cd _build

  local build_triplet
  if [[ -x ../build-aux/config.guess ]]; then
    build_triplet="$(../build-aux/config.guess)"
  elif [[ -x ../config.guess ]]; then
    build_triplet="$(../config.guess)"
  else
    build_triplet="$(uname -m)-unknown-linux-gnu"
  fi

  # Mantém mínimo de deps: sem PCRE2 ("perl regex")
  ../configure \
    --prefix=/usr \
    --host="$TARGET" \
    --build="$build_triplet" \
    --disable-nls \
    --disable-perl-regexp

  make -j"$JOBS"
}

install() {
  cd _build
  make DESTDIR="$DESTDIR" install

  # Enxugar docs (opcional)
  rm -rf "$DESTDIR/usr/share/info" "$DESTDIR/usr/share/man" 2>/dev/null || true
}
