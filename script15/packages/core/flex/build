#!/usr/bin/env bash
# core/flex 2.6.4 - build script para adm
# Compatível com musl, bootstrap e sistema final

NAME="flex"
CATEGORY="core"
VERSION="2.6.4"

URL="https://github.com/westes/flex/releases/download/v2.6.4/flex-2.6.4.tar.gz"
# CONFIRME o SHA256 oficial antes de usar em produção
SHA256="__CONFIRME_O_SHA256_OFICIAL_DO_FLEX_2_6_4__"

# flex depende de m4
DEPENDS="m4"
BUILD_DEPENDS=""

PREFIX="/usr"
BUILD_SYSTEM="autotools"

CONFIGURE_OPTS="
  --prefix=$PREFIX
  --disable-static
  --disable-nls
"

pkg_prepare() {
  # Limpeza defensiva (rebuild / resume)
  make distclean >/dev/null 2>&1 || true
}

pkg_configure() {
  rm -rf build
  mkdir -p build
  cd build

  # Build fora da árvore (recomendado)
  ../configure $CONFIGURE_OPTS
}

pkg_build() {
  cd build
  make -j"${JOBS:-1}"
}

pkg_install() {
  cd build
  make DESTDIR="$DESTDIR" install

  # Remove arquivos .la (boa prática em musl/bootstrap)
  find "$DESTDIR" -name '*.la' -delete 2>/dev/null || true
}

pkg_post() {
  :
}
