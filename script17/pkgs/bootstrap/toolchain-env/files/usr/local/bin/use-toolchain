#!/bin/sh
set -eu

ENVFILE="/usr/local/share/toolchain/env.sh"

if [ ! -f "$ENVFILE" ]; then
  echo "ERRO: env não encontrado: $ENVFILE" >&2
  exit 1
fi

cat <<EOF
Para assumir a toolchain temporária nesta sessão:

  . $ENVFILE

Depois, verifique:
  echo \$TARGET
  which \${TARGET}-gcc
  \${TARGET}-gcc -v

EOF

# Checagens rápidas (não obrigatórias)
if [ -n "${TC_PREFIX:-}" ] && [ -x "${TC_PREFIX}/bin/${TARGET}-gcc" ] 2>/dev/null; then
  echo "Detectado: ${TC_PREFIX}/bin/${TARGET}-gcc"
fi
