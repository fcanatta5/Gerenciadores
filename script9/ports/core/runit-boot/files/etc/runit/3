#!/bin/sh
set -eu

PATH=/usr/sbin:/usr/bin:/sbin:/bin
export PATH

echo "[runit] stage 3 (shutdown)"

# para udev
if command -v udevadm >/dev/null 2>&1; then
  udevadm control --exit 2>/dev/null || true
fi

# desmonta o que der
umount -a -r 2>/dev/null || true
swapoff -a 2>/dev/null || true

exit 0
